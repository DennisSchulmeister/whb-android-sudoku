<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sudoku" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>

        <item name="colorAccent">@color/secondaryColor</item>

        <!-- Application title bar -->
        <item name="titleTextColor">@color/secondaryTextColor</item>
        <item name="subtitleTextColor">@color/secondaryTextColor</item>
        <item name="actionMenuTextColor">@color/secondaryTextColor</item>
        <item name="android:actionMenuTextColor">@color/secondaryTextColor</item>
        <item name="actionOverflowButtonStyle">@style/Theme.Sudoku.ActionOverflowButton</item>
        <item name="toolbarNavigationButtonStyle">@style/Theme.Sudoku.ToolbarButtonNavigation</item>
    </style>

    <style name="Theme.Sudoku.ActionOverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/secondaryTextColor</item>
    </style>
    <style name="Theme.Sudoku.ToolbarButtonNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/secondaryTextColor</item>
    </style>

    <style name="Theme.Sudoku.Preferences" parent="Theme.Sudoku">
        <item name="android:textColorSecondary">@color/list_field_label</item>
    </style>

    <style name="Theme.Sudoku.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sudoku.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.Sudoku.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>